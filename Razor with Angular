<div ng-init="data = [
 @foreach (var item in ViewBag.CountryList) {
 <text>{CountryCode: '@item.CountryCode' , CountryName: '@item.CountryName' , CountrySName: '@item.CountrySName',
 Currency: '@item.CurrencyName',Time: '@item.TimeDifference' },</text> }]">

                                 <table class="table table-bordered table-striped mb-none">
                                    <thead>
                                        <tr>
                                            <th> Country Code </th>
                                            <th> Country Name </th>
                                            <th> Short Name </th>
                                            <th> Currency Name </th>
                                            <th> Time  </th>
                                            <th> Action  </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                         <tr ng-repeat="model in data">
                                             <td>
                                                 {{model.CountryCode}}
                                             </td>
                                             <td>
                                                 {{model.CountryName}}
                                             </td>
                                             <td>
                                                 {{model.CountrySName}}
                                             </td>

                                             <td>
                                                 {{model.Currency}}
                                             </td>
                                             <td>
                                                 {{model.Time}}
                                             </td>
